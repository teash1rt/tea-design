{
    "name": "tea-design",
    "private": false,
    "version": "0.8.4",
    "types": "dist/index.d.ts",
    "type": "module",
    "description": "基于Vue3，专注于实际需求的非通用组件库",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "keywords": [
        "vue3",
        "vite",
        "vue3组件库"
    ],
    "author": {
        "name": "TeaShirt"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "dev": "vite --force --port 5373",
        "build": "vue-tsc && vite build",
        "preview": "vite preview",
        "test": "vitest --no-threads",
        "coverage": "vitest run --coverage",
        "docs:dev": "vitepress dev docs --port 5473",
        "docs:build": "vitepress build docs",
        "docs:serve": "vitepress serve docs",
        "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
        "format": "prettier --write  \"src/**/*.ts\" \"src/**/*.vue\" \"src/**/*.less\" \"client/**/*.vue\" \"client/**/*.ts\" \"docs/**/*.vue\""
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "vue": "^3.3.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.0.0",
        "@commitlint/config-conventional": "^18.0.0",
        "@types/node": "^20.4.8",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.6.0",
        "@vitejs/plugin-vue": "^4.2.3",
        "@vitest/coverage-v8": "^0.34.3",
        "@vue/test-utils": "^2.4.1",
        "@vueuse/core": "^10.4.1",
        "@vueuse/integrations": "^10.4.1",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-vue": "^9.17.0",
        "happy-dom": "^10.9.0",
        "husky": "^4.0.0",
        "less": "^4.2.0",
        "prettier": "3.0.3",
        "rollup-plugin-visualizer": "^5.9.2",
        "typeit": "^8.7.1",
        "typescript": "^5.0.2",
        "unplugin-vue-define-options": "^1.3.14",
        "vite": "^4.4.5",
        "vite-plugin-dts": "^3.5.2",
        "vitepress": "^1.0.0-rc.4",
        "vitest": "^0.34.1",
        "vitest-canvas-mock": "^0.3.3",
        "vue-router": "^4.2.4",
        "vue-tsc": "^1.8.5"
    }
}
