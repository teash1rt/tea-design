{
  "name": "tea-design",
  "private": false,
  "version": "0.8.5",
  "types": "dist/index.d.ts",
  "type": "module",
  "description": "基于Vue3，专注于实际需求的非通用组件库",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "keywords": [
    "vue3",
    "vite",
    "vue3组件库"
  ],
  "author": {
    "name": "TeaShirt"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite --force --port 5373",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev docs --port 5473",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write  \"src/**/*.ts\" \"src/**/*.vue\" \"src/**/*.less\" \"client/**/*.vue\" \"client/**/*.ts\" \"docs/**/*.vue\"",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.4.8",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-v8": "^2.0.1",
    "@vue/test-utils": "^2.4.1",
    "@vueuse/core": "^10.4.1",
    "@vueuse/integrations": "^10.4.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "happy-dom": "^10.9.0",
    "husky": "^9.0.11",
    "less": "^4.2.0",
    "prettier": "3.0.3",
    "rollup-plugin-visualizer": "^5.9.2",
    "typeit": "^8.7.1",
    "typescript": "^5.5.3",
    "unplugin-vue-define-options": "^1.3.14",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.2",
    "vitepress": "^1.3.0",
    "vitest": "^2.0.1",
    "vitest-canvas-mock": "^0.3.3",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vue-tsc": "^2.0.26"
  }
}
